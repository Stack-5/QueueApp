{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@firebase/auth": ["node_modules/@firebase/auth/dist/index.rn.d.ts"],
      "@components/*": ["components/*"],
      "@contexts/*": ["contexts/*"],
      "@hooks/*": ["hooks/*"],
      "@methods/*": ["methods/*"],
      "@type/*": ["type/*"],
      "@firebaseConfig": ["./firebaseConfig.ts"],
      "@assets/*": ["assets/*"]
    }
  }
}
